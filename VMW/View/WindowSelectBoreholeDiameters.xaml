<Window x:Class="VMW.WindowSelectBoreholeDiameters"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VMW"
        mc:Ignorable="d"
        Title="Диаметры колонны" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" SizeToContent="WidthAndHeight" MaxWidth="250" MaxHeight="300">
    
    <Grid x:Name="grid" Width="200">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListView x:Name="ViewSelectDiameters"/>
        <Button x:Name="ButtonSelect" Content="Выбрать" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" IsDefault="True" Width="{Binding ActualWidth, ElementName=grid, Mode=OneWay}" Height="20" Click="ButtonSelect_Click"/>

    </Grid>
</Window>
